<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/img_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/test_image" />

        <TextView
            android:id="@+id/txt_font_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:gravity="center_horizontal"
            android:text="Hello Font" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/txt_love_font_numbers"
            android:layout_width="120dip"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/download_flag"
            android:paddingLeft="50dip"
            android:text="2390" />

        <TextView
            android:id="@+id/txt_download_font_numbers"
            android:layout_width="120dip"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/love_flag"
            android:paddingLeft="20dip"
            android:text="3458æ¬¡" />
    </LinearLayout>

</LinearLayout>