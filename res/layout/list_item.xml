<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingTop="2dip" >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/img_thumbnail"
            android:layout_width="154dip"
            android:layout_height="151dip" />

        <TextView
            android:id="@+id/txt_font_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="15dip"
            android:gravity="center_horizontal" />
    </FrameLayout>

    <LinearLayout
        android:background="@color/puple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="6dip"
        android:gravity="center_horizontal|center_horizontal"
        android:orientation="horizontal" >

        <com.sg.mtfont.view.DrawableCenterTextView
            android:id="@+id/txt_love_font_numbers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/gridview_item_btn_background"
            android:drawableLeft="@drawable/download_flag"
            android:gravity="center_horizontal" />

        <com.sg.mtfont.view.DrawableCenterTextView
            android:id="@+id/txt_download_font_numbers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/gridview_item_btn_background"
            android:drawableLeft="@drawable/love_flag"
            android:gravity="center_horizontal" />
    </LinearLayout>

</LinearLayout>